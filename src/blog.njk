---
title: Blog
layout: 'base.njk'
---

    <section class="py-4 grid place-content-center"> 
        <h1 class="text-bold text-white text-4xl text-center w-fit mx-auto px-4 py-2 border-b mb-8">
            Digital Arts by Ai
        </h1>
        
        <div class="xl:w-[1520px] items-center mx-auto w-full">
            <ul class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                {%- for post in collections.post -%}
                    <li class="w-full overflow-hidden rounded-2xl">
                        <a href="{{ post.url }}" class="w-full group relative">
                                <img 
                                    src="{{post.data.image}}"
                                    alt="{{ post.data.imageAlt }}"
                                    class="max-h-96 h-full w-full object-cover object-center hover:scale-110 duration-700"/>
                                    <div class="absolute bg-pink-800/40 bottom-0 flex flex-col px-4 pt-2 group-hover:bg-pink-800/80 text-white duration-500 mx-auto w-full">
                                    <small class="flex justify-between items-center">
                                        <h2 class="font-bold text-xl">{{ post.data.title }}</h2>
                                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="1.7em" height="1.7em"><path d="M12.001 4.529c2.349-2.109 5.979-2.039 8.242.228 2.262 2.268 2.34 5.88.236 8.236l-8.48 8.492-8.478-8.492c-2.104-2.356-2.025-5.974.236-8.236 2.265-2.264 5.888-2.34 8.244-.228zm6.826 1.641c-1.5-1.502-3.92-1.563-5.49-.153l-1.335 1.198-1.336-1.197c-1.575-1.412-3.99-1.35-5.494.154-1.49 1.49-1.565 3.875-.192 5.451L12 18.654l7.02-7.03c1.374-1.577 1.299-3.959-.193-5.454z"/>
                                        </svg>
                                    </small>
                                <p class="text-sm leading-4">{{ post.data.description }}</p>
                                <p class="italic text-pink-300 text-xs py-1.5">
                                    &COPY; {{ post.data.author }} | {{ post.date | postDate }}
                                </p>
                            </div>
                        </a> 
                    </li>
                {%- endfor -%}
            </ul>                        
        </div>
                        
    </section>
